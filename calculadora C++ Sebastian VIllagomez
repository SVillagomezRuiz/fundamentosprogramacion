#include <iostream>

// utilizar la salida y la entrada estandar teclado y monitor
using namespace std;

int main()
{
    //Declaro variables en C++
    int A,B,C,D,E,F;
        cout<<"ingresar el primer numero: ";
        cin>>A;
        cout <<"ingresar el segundo numero: ";
        cin>>B;
        C=A+B;
        D=A-B;
        E=A*B;
        F=A/B;
        cout<<"la suma es: "<<C<<endl;
        cout<<"la resta es: "<<D<<endl;
        cout<<"la multiplicacion es: "<<E<<endl;
        cout<<"la division es: "<<F<<endl;
    return 0;
}
